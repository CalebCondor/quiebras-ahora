---
import { BookOpen, Calendar, User, ArrowRight } from "@lucide/astro";
import { blogPosts } from "../../data/blog";

// Only show the first post
const featuredPost = blogPosts[0];
---

<section id="blog-preview" class="py-24 px-8 bg-gray-50/50 overflow-hidden">
  <div class="max-w-[1400px] mx-auto">
    <!-- Section Header -->
    <div
      class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-16 text-left"
    >
      <div class="max-w-2xl">
        <div
          class="flex items-center gap-3 text-primary font-bold uppercase tracking-[0.25em] text-[11px] mb-6"
        >
          <BookOpen class="w-5 h-5" />
          <span class="border-b border-primary/30 pb-1">Del Blog</span>
        </div>
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-['Playfair_Display'] text-gray-900 leading-[1.15] mb-6"
        >
          Últimas <span class="text-primary italic font-serif"
            >Publicaciones</span
          >
        </h2>
        <p class="text-gray-600 text-lg leading-relaxed">
          Información legal actualizada para ayudarle a tomar decisiones
          informadas.
        </p>
      </div>
      <div class="hidden lg:block pb-2">
        <a
          href="/blog"
          class="flex items-center gap-3 text-primary font-bold uppercase tracking-widest text-xs group"
        >
          Ver todo el blog
          <ArrowRight
            class="w-4 h-4 group-hover:translate-x-2 transition-transform"
          />
        </a>
      </div>
    </div>

    <!-- Featured Post -->
    <article
      class="group relative bg-white border border-gray-100 hover:border-primary/20 transition-all duration-500 shadow-sm hover:shadow-2xl overflow-hidden"
    >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
        <!-- Post Image -->
        <div class="relative h-80 lg:h-auto overflow-hidden">
          <img
            src={featuredPost.image}
            alt={featuredPost.title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale-[0.2] group-hover:grayscale-0"
          />
          <div class="absolute top-6 left-6">
            <span
              class="bg-primary text-white text-[10px] font-bold uppercase tracking-widest px-4 py-2"
            >
              {featuredPost.category}
            </span>
          </div>
        </div>

        <!-- Post Content -->
        <div class="p-12 lg:p-16 flex flex-col justify-center">
          <div
            class="flex items-center gap-6 text-xs font-medium text-gray-400 mb-6 font-['Montserrat']"
          >
            <div class="flex items-center gap-2">
              <Calendar class="w-4 h-4" />
              <span>{featuredPost.date}</span>
            </div>
            <div class="flex items-center gap-2">
              <User class="w-4 h-4" />
              <span>{featuredPost.author}</span>
            </div>
          </div>

          <h3
            class="text-3xl lg:text-4xl font-['Playfair_Display'] font-bold text-gray-900 mb-6 group-hover:text-primary transition-colors leading-tight"
          >
            {featuredPost.title}
          </h3>

          <p class="text-gray-600 text-base leading-relaxed mb-8">
            {featuredPost.excerpt}
          </p>

          <a
            href={`/blog/${featuredPost.slug}`}
            class="inline-flex items-center gap-3 text-primary font-bold uppercase tracking-widest text-xs group/link"
          >
            Leer Artículo Completo
            <ArrowRight
              class="w-4 h-4 group-hover/link:translate-x-1 transition-transform"
            />
          </a>
        </div>
      </div>
    </article>

    <!-- Mobile View All Button -->
    <div class="mt-12 lg:hidden text-center">
      <a
        href="/blog"
        class="inline-flex items-center gap-3 text-primary font-bold uppercase tracking-widest text-xs"
      >
        Ver todo el blog
        <ArrowRight class="w-4 h-4" />
      </a>
    </div>
  </div>
</section>
