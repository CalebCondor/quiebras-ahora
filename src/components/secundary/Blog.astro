---
import { BookOpen, Calendar, User, ArrowRight } from "@lucide/astro";
import { blogPosts } from "../../data/blog";

interface Props {
  showHeader?: boolean;
}

const { showHeader = true } = Astro.props;
---

<section id="blog" class="py-24 px-8 bg-white overflow-hidden">
  <div class="max-w-[1400px] mx-auto">
    <!-- Section Header -->
    {showHeader && (
      <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-20 text-left">
        <div class="max-w-2xl">
          <div class="flex items-center gap-3 text-primary font-bold uppercase tracking-[0.25em] text-[11px] mb-6">
            <BookOpen class="w-5 h-5" />
            <span class="border-b border-primary/30 pb-1">Nuestro Blog</span>
          </div>
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-['Playfair_Display'] text-gray-900 leading-[1.15] mb-6">
            Información y <span class="text-primary italic font-serif">Recursos</span>
          </h2>
          <p class="text-gray-600 text-lg leading-relaxed">
            Manténgase informado con nuestros artículos más recientes sobre leyes de quiebras, finanzas personales y consejos legales expertos.
          </p>
        </div>
        <div class="hidden lg:block pb-2">
          <a href="/blog" class="flex items-center gap-3 text-primary font-bold uppercase tracking-widest text-xs group">
            Ver todas las publicaciones
            <ArrowRight class="w-4 h-4 group-hover:translate-x-2 transition-transform" />
          </a>
        </div>
      </div>
    )}

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      {blogPosts.map((post) => (
        <article class="group relative flex flex-col bg-white border border-gray-100 hover:border-primary/20 transition-all duration-500 shadow-sm hover:shadow-2xl overflow-hidden h-full">
          <!-- Post Image -->
          <div class="relative h-64 overflow-hidden">
            <img 
              src={post.image} 
              alt={post.title} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale-[0.2] group-hover:grayscale-0"
            />
            <div class="absolute top-4 left-4">
              <span class="bg-primary text-white text-[10px] font-bold uppercase tracking-widest px-3 py-1">
                {post.category}
              </span>
            </div>
          </div>

          <!-- Post Content -->
          <div class="p-8 flex flex-col flex-1">
            <div class="flex items-center gap-4 text-xs font-medium text-gray-400 mb-4 font-['Montserrat']">
              <div class="flex items-center gap-1.5">
                <Calendar class="w-3.5 h-3.5" />
                <span>{post.date}</span>
              </div>
              <div class="flex items-center gap-1.5">
                <User class="w-3.5 h-3.5" />
                <span>{post.author}</span>
              </div>
            </div>

            <h3 class="text-2xl font-['Playfair_Display'] font-bold text-gray-900 mb-4 group-hover:text-primary transition-colors leading-tight">
              {post.title}
            </h3>

            <p class="text-gray-600 text-sm leading-relaxed mb-8 line-clamp-3">
              {post.excerpt}
            </p>

            <a href={`/blog/${post.slug}`} class="mt-auto inline-flex items-center gap-2 text-primary font-bold uppercase tracking-widest text-[10px] group/link">
              Leer Artículo Completo 
              <ArrowRight class="w-3.5 h-3.5 group-hover/link:translate-x-1 transition-transform" />
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- Mobile View All Button -->
    {showHeader && (
      <div class="mt-12 lg:hidden text-center">
        <a href="/blog" class="inline-flex items-center gap-3 text-primary font-bold uppercase tracking-widest text-xs">
          Ver todas las publicaciones
          <ArrowRight class="w-4 h-4" />
        </a>
      </div>
    )}
  </div>
</section>
